#filter
  margin 30px 0

  #filter-group
    height 46px
    margin-bottom 15px

    .btn-group
      height 46px
      margin 0 -5px 0 0
      padding 0
      line-height 46px

      &.title
        background bblue
        width 108px
        padding-left 18px
        position relative
        z-index 100
        border-radius 4px 0 0 4px
        box-shadow inset 0 0 0 1px rgba(0,0,0,0.07)
        span
          font-size 16px
          font-family pt-sans
          color white

      a.dropdown-toggle
        background grey_fa
        border-radius 0
        height 46px
        width 169px
        color grey_9
        font-size 13px
        line-height 46px
        text-align left
        padding 0 0 0 36px
        box-shadow inset 0 0 0 1px rgba(0,0,0,0.07)
        position relative
        outline none
        .caret
          position absolute
          top 14px
          right 18px
        &:after
          circle-labels(bgreen)
          top 18px
          left 18px

      &:last-of-type
        a.dropdown-toggle
          border-radius 0 4px 4px 0
        .dropdown-menu
            right 1px
            left auto

      &.orange
        a.dropdown-toggle, .selected
          &:after
            background borange           
      &.blue
        a.dropdown-toggle, .selected
          &:after
            background bblue
      &.yellow
        a.dropdown-toggle, .selected
          &:after
            background byellow

      &.open
        a.dropdown-toggle
          background white
          border-bottom-right-radius 0

    .dropdown-menu
      min-width 407px
      max-height 400px
      overflow auto

      &.narrow
        min-width 203px

      li
        border-bottom 1px solid grey_e
        font-size 13px
        position relative

        a
          overflow hidden
          padding 10px

          img
            width 22px
            height 22px
            float left
            margin-right 7px

          span
            line-height 17px
            color grey_6
            padding-right 7px

            &.name
              font-weight bold
              color bblack

          &:hover
            color bblack
            background grey_fa

        &.selected
          &:after
            circle-labels(bgreen)
            top 50%
            margin-top -5px
            right 10px


        &:last-of-type
          border-bottom 0

#issues
  padding-bottom 50px
  overflow hidden

  .issue
    background white
    border 1px solid rgba(0,0,0,0.1)
    border-radius 4px
    margin-bottom 20px
    position relative

    &.span6
      &:nth-child(odd)
        margin-left 0
        clear left

    &.labeled
      border-color bblack
      &:after
        content 'Priority'
        background bblack
        color white
        padding 2px 8px
        text-transform uppercase
        letter-spacing 0.2em
        font-size 9px
        top 0
        left 0
        position absolute
        border-bottom-right-radius 4px
      &.priority
        border-color bblue
        &:after
          background bblue
      &.bug
        border-color borange
        &:after
          content 'Bug'
          background borange

    .name-img
      padding 15px
      overflow hidden

      .user-img
        float left
        margin-right 13px

        img
          width 72px
          height 72px
    .title
      float left
      width 342px

      h3
        margin-bottom 5px
        a
          color grey_6
          &:hover
            text-decoration none
            color bblue

      span.created
        color grey_9
        font-size 13px

        a
          color grey_6
          font-weight bold

      a.comments
        color grey_3
        font-weight bold
        opacity 0.4
        i
          margin-top 2px

        &:hover
          text-decoration none
          opacity 1
    .tags
      border-top 1px solid grey_e
      padding 15px 15px 10px
